<div class="body">
  <div class="wrapper">
    <div class="sign-title">
      <h2>Sign Up</h2>
    </div>

    <%= form_with model: @user, url: user_path, local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="field">
        <%= f.label :staff_number, '社員番号', class: "sign-label-name" %><br />
        <%= f.text_field :staff_number, placeholder:"半角数字", autocomplete: "staff_number", class: "sign-form-area" %>
      </div>

      <div class="field">
        <%= f.label :email, 'Email Address', class: "sign-label-name" %><br />
        <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", class: "sign-form-area" %>
      </div>

      <div class="field">
        <%= f.label :password, 'Password', class: "sign-label-name" %><br />
        <%= f.password_field :password, placeholder:"半角英数字", class: "sign-form-area" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmati, 'Password（再）', class: "sign-label-name" %><br />
        <%= f.password_field :password_confirmation,  placeholder:"同じパスワードを入力して下さい", class: "sign-form-area" %>
      </div>

      <div class="send-field">
        <%= f.submit "Sign up", class: "sign-btn" %>
      </div>
    <% end %>
  </div>
</div>